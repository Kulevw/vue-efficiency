.audio-message
  display flex
  width 300px
  background-color #333333
  margin 10px
  padding 5px

  &__button
    flex-shrink 0
    position relative
    display flex
    align-items center
    justify-content center
    width 40px
    height 40px
    background-color var(--primary)
    border-radius 50%
    margin-right 10px

    &-state
      font-size 14px

      input:checked ~ &:before
        content 'stop'

      input:not(:checked) ~ &:before
        content 'play'

    &-focus
      position absolute
      top 0
      right 0
      bottom 0
      left 0

      input:focus ~ &
        border-radius inherit
        box-shadow 0 0 0 3px var(--focus-outline)

  &__progress
    position relative
    flex-grow 1
    display flex
    justify-content center
    align-items center

    & > input
      display block
      width 100%

  &__right-panel
    display flex
    flex-direction column
    justify-content space-between
    flex-shrink 0
    margin-left 10px
    text-align center

  &__time
    font-size 14px

  &__speed
    position relative
    font-size 14px

    &-focus
      position absolute
      top 0
      right 0
      bottom 0
      left 0

      input:focus ~ &
        border-radius inherit
        box-shadow 0 0 0 3px var(--focus-outline)
