.template-popup-modal
  position relative
  max-width 450px
  width 100%
  padding 40px
  background-color var(--bg)

  &__head
    //padding 30px 30px 0 30px

  &__close
    position absolute
    top 0
    right 0
    padding 3px

    & > svg
      width 20px
      height 20px

  @media screen and (max-width 575px)
    flex-grow 1
    padding 15px
    max-width none
