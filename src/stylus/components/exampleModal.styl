.example-modal
  max-width 320px
  padding 0

  &__actions
    display grid
    width 100%
    height 300px
    padding 50px
    grid-gap 10px
    grid-template-columns 1fr 1fr 1fr
    justify-items center
    align-items center

  &__modal-open
    width 50px
    height 50px
    border 2px solid var(--primary)
    background-color var(--primary-light)

  @media screen and (max-width 575px)
    max-width none
