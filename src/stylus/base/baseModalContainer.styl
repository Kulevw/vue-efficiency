.base-modal-container
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  min-height 100%
  -webkit-overflow-scrolling touch
  z-index 1000
  overflow-y auto
  display flex
  flex-direction column

  &__background
    position fixed
    background-color alpha(black, 0.4)
    z-index -1
    top 0
    left 0
    right 0
    bottom 0
    pointer-events none

  &__inner
    display flex
    flex-direction column
    align-items center
    justify-content center
    flex-grow 1
    flex-shrink 0
    padding 50px

    &:focus
      outline none

  @media screen and (max-width 575px)

    &__inner
      padding 0
