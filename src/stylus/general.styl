html
  height 100%
  background-color var(--bg)
  color var(--text)

body
  min-height 100vh

button
  cursor pointer

[disabled]
  cursor auto !important

.visibility-hidden
  position absolute
  width 1px
  height 1px
  pointer-events none
  overflow hidden
  clip rect(0 0 0 0)

.invisible
  visibility hidden
