.ui-radio
  position relative
  display inline-flex
  border-radius 15px

  &__box
    position relative
    flex-shrink 0
    display flex
    align-items center
    justify-content center
    width 25px
    height 25px
    border-style solid
    border-width 2px
    border-color var(--border)
    border-radius 15px
    cursor pointer

    &:before
      content ''
      display block
      width 13px
      height 13px
      transform scale(0)
      background-color var(--primary)
      border-radius 50%
      transition transform .2s

    &:after
      content ''
      display block
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      border-radius inherit



    input:checked ~ &:before
      transform scale(1)

    input:checked ~ &
      border-color var(--primary)

    input:focus ~ &
      border-color var(--active)

    input:focus ~ &:before
      background-color var(--active)

  &__label
    cursor pointer
    flex-shrink 1
    flex-grow 1
    align-self center
    padding-left 5px

    input:focus ~ &
      color var(--active)

