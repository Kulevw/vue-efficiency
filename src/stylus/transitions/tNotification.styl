.t-notification

  &-item
    transition opacity .3s, transform .2s
    flex-shrink 0

  &-enter-from
    opacity 0
    transform translateX(100%)

  &-enter-to
    opacity 1
    transform translateX(0)

  &-leave-from
    opacity 1
    transform translateX(0)

  &-leave-to
    opacity 0
    transform translateX(100%)

  &-leave-active
    position absolute
