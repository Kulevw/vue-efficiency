.t-popover

  &-enter-from
    transform translateY(15px)
    opacity 0

  &-enter-active
    transition transform .2s, opacity .1s

  &-enter-to
    transform translateY(0)
    opacity 1

  &-leave-from
    transform translateY(0)
    opacity 1
    pointer-events none

  &-leave-active
    transition transform .1s, opacity .2s
    z-index 99 !important

  &-leave-to
    transform translateY(15px)
    opacity 0
